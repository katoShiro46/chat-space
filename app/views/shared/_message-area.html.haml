-@messages.each do |message|
  .message-area__message-box
    .message-area__message-box__name
      = message.user.name
    .message-area__message-box__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
    .message-area__message-box__comment
      = message.comment if message.comment.present?
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?


